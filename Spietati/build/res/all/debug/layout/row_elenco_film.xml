<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="6dip" >

    <TextView
            android:id="@+id/mese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:text="SETTEMBRE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="top"/>


    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/ic_launcher"
            android:layout_alignBaseline="@+id/mese"
            android:layout_alignParentLeft="false"
            android:paddingTop="6dp"
            android:adjustViewBounds="true"/>

    <TextView
            android:id="@+id/label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:text="Example application"
            android:textSize="16sp"
            android:layout_below="@+id/mese"
            android:layout_alignLeft="@+id/secondLine"/>

    <TextView
            android:id="@+id/secondLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Description"
            android:textSize="12sp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"/>

</RelativeLayout><!-- From: file:/C:/Users/uno/AndroidStudioProjects/SpietatiProject/Spietati/src/main/res/layout/row_elenco_film.xml -->